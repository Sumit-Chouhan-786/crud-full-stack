<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Update Topper</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form action="/add-topper" method="POST" enctype="multipart/form-data">
            <!-- Student Name Field -->
            <div class="mb-3">
              <label for="studentName" class="form-label">Student Name</label>
              <input
                type="text"
                class="form-control"
                id="studentName"
                name="studentName"
                placeholder="Enter student name"
                required
              />
            </div>
            
            <!-- Title Field -->
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter title"
                required
              />
            </div>
            
            <!-- Year Field -->
            <div class="mb-3">
              <label for="year" class="form-label">Year</label>
              <input
                type="text"
                class="form-control"
                id="year"
                name="year"
                placeholder="Enter year"
                required
              />
            </div>
            
            <!-- Student Image Upload Field -->
            <div class="mb-3">
              <label for="studentImage" class="form-label">Student Image</label>
              <input
                type="file"
                class="form-control"
                id="studentImage"
                name="studentImage"
                accept=".jpg,.png"
                required
              />
              <div class="form-text">
                Upload the student's image here (JPG/PNG).
              </div>
            </div>
            
            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">Submit</button>
            </div>
          </form>
          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./layout/admin_footer.ejs") %>
