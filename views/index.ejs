<%- include('layout/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 my-3">
            <% if (message) {%>
                <div class="alert d-flex justify-content-between alert-dismissable fade show alert-<%=message.type %>" role="alert">
                    <strong><%= message.message %></strong>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close">
                    </button>
                </div>
            <%} %>
          <div>
            <%if (users != '') {%>
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="text-white table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>E-Mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                         <% users.forEach((row,index) => {%>
                         <tr>
                          <td><%= index %></td>
                            <td>
                                <img src=<%=row.image%> alt="User Image" class="img-thumbnail" style="width: 50px; height: 50px;">
                            </td>
                            <td><%= row.name  %></td>
                            <td><%= row.email  %></td>
                            <td><%= row.phone  %></td>
                            <td>
                                <a href="/edit/<%= row._id %>" class="btn btn-success btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/delete/<%= row._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                       <%})%>
                    </tbody>
                </table>
           <% } else {%>
                <h1 class="text-center text-secoundry mt-5">No users found in database</h1>
            <%}%>
            
          </div>
        </div>
    </div>
</div>
<%- include('layout/footer.ejs') %> 
