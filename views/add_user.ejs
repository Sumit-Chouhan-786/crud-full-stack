<%- include('layout/header.ejs') %>
<div class="container h-100">
       <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-white bg-primary">
                        <h3 class="text-center">Add New User</h3>
                    </div>
                    <div class="card-body">
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <!-- Name Input -->
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" required name="name" placeholder="Enter name">
                            </div>

                            <!-- Email Input -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" required name="email" placeholder="Enter email">
                            </div>

                            <!-- Phone Input -->
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="text" class="form-control" required name="phone" placeholder="Enter phone">
                            </div>

                            <!-- File Input -->
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input type="file" class="form-control" required name="image">
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Add User</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
    </div>
</div>
<%- include('layout/footer.ejs') %> 
