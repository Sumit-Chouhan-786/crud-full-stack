<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Add Slider</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form action="/add-Slider" method="POST" enctype="multipart/form-data">
            <!-- Slider Image Upload Field -->
            <div class="mb-3">
              <label for="courseImage" class="form-label">Slider Image</label>
              <input
                type="file"
                class="form-control"
                id="courseImage"
                name="courseImage"
                accept=".jpg,.png"
                required
              />
              <div class="form-text">
                Upload your slider image here (JPG/PNG).
              </div>
            </div>
            
            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">Submit</button>
            </div>
          </form>
          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include the admin footer -->
<%- include("./layout/admin_footer.ejs") %>
